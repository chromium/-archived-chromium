Import('env')

env = env.Clone()

env.Prepend(
    CPPPATH = [
        '$GTEST_DIR',
        '$GTEST_DIR/include',
    ],
)

if env['PLATFORM'] == 'win32':
  env.Append(
      CCFLAGS = [
          '/TP',

          '/WX',
          '/Wp64',
      ],
  )

input_files = [
    'gtest/src/gtest-death-test.cc',
    'gtest/src/gtest-filepath.cc',
    'gtest/src/gtest-port.cc',
    'gtest/src/gtest.cc',
    'multiprocess_func_list.cc',
]

env.ChromeStaticLibrary('gtest', input_files)

