        'LIBXML_STATIC',
        '_WINDLL',
    ],
    CCFLAGS = [
        '/TP',

        '/Wp64',

        '/wd4503',
        '/wd4819',
    ],
)

env_dll.Append(
    CPPPATH = [
        #/I '../chrome/Debug/webkit'
        #/I '../third_party/webkit/out'

        Dir('#../chrome/app'),
        #Dir('#../chrome/Debug/obj/generated_resources'),
        Dir('#../chrome/Debug/obj/localized_strings'),
