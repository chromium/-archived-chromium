        'winmm.lib',
        'winspool.lib',
        'ws2_32.lib',
        'wsock32.lib',

        env.File('$BASE_DIR/base.lib'),
        env.File('$BASE_DIR/gfx/base_gfx.lib'),
        env.File('$BREAKPAD_DIR/breakpad_handler.lib'),
