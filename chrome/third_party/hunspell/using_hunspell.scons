__doc__ = """
Settings for other components using hunspell.
"""

Import("env")

env.Append(
    CPPDEFINES = [
        'USE_HUNSPELL',
        'HUNSPELL_CHROME_CLIENT',
    ],
    CPPPATH = [
        '$CHROME_DIR/third_party/hunspell/src/hunspell',
    ],
    LIBS = [
        'hunspell',
    ],
)
