Import('env')

env = env.Clone()

if env.Bit('windows'):
  env.Prepend(
      CPPPATH = [
          '$CHROME_DIR/tools/build/win',
          '$CHROME_SRC_DIR',
      ],
      CCFLAGS = [
          '/TP',
          #'/Wp64',
      ],
  )

env.Append(
    CPPPATH = [
        '$TARGET_ROOT/grit_derived_sources',
        '$ICU38_DIR/public/common',
        '$ICU38_DIR/public/i18n',
        '$SKIA_DIR/include',
        '$SKIA_DIR/include/corecg',
        '$SKIA_DIR/include/platform',
        'third_party/wtl/include',
    ],
)

