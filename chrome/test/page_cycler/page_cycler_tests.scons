                          dest=('$CHROME_SRC_DIR/chrome/'
                                + 'test/page_cycler/page_cycler_tests.vcproj'),
                          guid='{C9E0BD1D-B175-4A91-8380-3FDC81FAB9D7}',
                          dependencies = [
