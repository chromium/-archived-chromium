Import('env')

env = env.Clone()

env.Append(
    CPPPATH = [
        '$WEBKIT_DIR/build/WebCore',
    ]
)

if env.Bit('windows'):
  env.Append(
      CCFLAGS = [
          '/TP',

          '/WX',

          '/wd4800',
      ],
  )

